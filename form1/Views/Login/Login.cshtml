@model User

<div class="row">
    <div class="col-6 offset-3">
        <h1>LOGİN</h1>

        @if (ViewData["Message"] != null)
        {
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                <div>
                    @ViewData["Message"]

                </div>
            </div>
        }

        <form asp-controller="Login" asp-action="Loginegel" method="post">
            <div class="mb-3">

                <label for="nickname" class="form-label"> Nickname gir</label>
                <input id="nickname" type="text" class="form-control" placeholder="kral2121" asp-for="Nickname" />

            </div>
            <div class="mb-3">
                <label for="email" class="form-label"> Email adress gir </label>
                <input type="email" class="form-control" id="email" placeholder="name@example.com" asp-for="Email" />
            </div>

            <div class="mb-3">

                <label for="password" class="form-label"> şifre gir </label>
                <input id="password" type="password" class="form-control" placeholder="********" asp-for="Password" />

            </div>

            <input type="submit" class="btn btn-primary" value="Giriş Yappp" />  <br /><br />

            Henüz Bir Hesabın Yok mu? <a asp-controller="Login" asp-action="Register"> Kaydol</a>

            @* <button class="btn btn-primary" href="#">Giriş Yap  </button>*@

        </form>
    </div>
</div>